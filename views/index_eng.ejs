    <script type="text/javascript">
        $('.imgs-slide').slick({
            dots: true,
            infinite: true,
            slidesToShow: 4,
            slidesToScroll: 2
        });

        function scrollToItem(item) {
            event.preventDefault();
            const to = document.querySelector(item).offsetTop;
            window.scroll({
                top: to - 83,
                behavior: "smooth",
            });
        }



        let divHeader = document.querySelector("#header-home");
        let menuItens = document.querySelector("#menu-itens");
        let lang = document.querySelector("#language-sw");
        let imgLogo = document.querySelector("#logo");

        $(window).scroll(() => {
            let scrollBar = window.scrollY;
            if (scrollBar > 0) {
                divHeader.classList.add("header-home-fix");
                menuItens.classList.add("menu-itens-fix");
                lang.classList.add("language-sw-fix");
                imgLogo.src = "/images/logo-preta.png"
                divHeader.classList.remove("header-home");


            } else
            if (scrollBar == 0) {
                divHeader.classList.add("header-home");
                divHeader.classList.remove("header-home-fix");
                menuItens.classList.remove("menu-itens-fix");
                imgLogo.src = "/images/logo-branca.png"
                lang.classList.remove("language-sw-fix");

            }

        });
    </script>

